<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- index.phpを削除するルール -->
                <rule name="CodeIgniter4 - Remove index.php" stopProcessing="true">
                    <match url="^(.*)$" ignoreCase="false" />
                    <conditions>
                        <!-- 実際のファイルやディレクトリが存在しない場合のみ適用 -->
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" ignoreCase="false" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" ignoreCase="false" negate="true" />
                        <!-- index.phpで始まらないURL -->
                        <add input="{URL}" pattern="^/index\.php" ignoreCase="false" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.php/{R:1}" appendQueryString="true" />
                </rule>
                <!-- index.phpで始まるURLをリダイレクト（SEO対策） -->
                <rule name="CodeIgniter4 - Redirect index.php" stopProcessing="true">
                    <match url="^index\.php/(.*)$" ignoreCase="false" />
                    <action type="Redirect" url="{R:1}" redirectType="Permanent" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
