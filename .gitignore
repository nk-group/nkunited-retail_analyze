# ========================================
# Retail Sales Analysis System - .gitignore
# CodeIgniter 4 + SQL Server Environment
# ========================================

# =====================================
# CodeIgniter 4 Framework Files
# =====================================

# Environment configuration files
.env
.env.*
!.env.example

# CodeIgniter writable directories
src/writable/cache/*
src/writable/logs/*
src/writable/session/*
src/writable/uploads/*
src/writable/temp/*
src/writable/debugbar/*

# Keep directory structure but ignore contents
!src/writable/cache/.gitkeep
!src/writable/logs/.gitkeep
!src/writable/session/.gitkeep
!src/writable/uploads/.gitkeep
!src/writable/temp/.gitkeep
!src/writable/debugbar/.gitkeep

# Archive files (generated by import system)
src/writable/archives/*
!src/writable/archives/.gitkeep

# Task lock files (background processing)
src/writable/tasks/*.lock
!src/writable/tasks/.gitkeep

# =====================================
# PHP & Composer Dependencies
# =====================================

# Composer dependencies
src/vendor/
composer.lock

# PHPUnit test results
src/tests/_support/_generated/

# =====================================
# Database & Sensitive Information
# =====================================

# Database configuration (if any local configs)
src/app/Config/Database.local.php

# SQL Server connection strings with credentials
*.mdf
*.ldf
*.bak

# =====================================
# Development Tools & IDE
# =====================================

# Visual Studio Code
.vscode/
*.code-workspace

# PhpStorm / IntelliJ
.idea/
*.iml
*.iws

# Sublime Text
*.sublime-project
*.sublime-workspace

# NetBeans
nbproject/

# Eclipse
.project
.buildpath
.settings/

# =====================================
# Windows Specific Files
# =====================================

# Windows thumbnail cache files
Thumbs.db
Thumbs.db:encryptable
ehthumbs.db
ehthumbs_vista.db

# Windows folder config file
[Dd]esktop.ini

# Windows Recycle Bin
$RECYCLE.BIN/

# Windows shortcuts
*.lnk

# =====================================
# Server & Deployment Files
# =====================================

# IIS specific files (keep web.config for deployment reference)
# web.config (uncomment if you want to ignore it)

# Apache files (if switching servers)
.htaccess.local
.htpasswd

# =====================================
# Development Tools in /tools/
# =====================================

# Installation files and downloads
tools/*.exe
tools/*.msi
tools/*.zip
tools/*.tar.gz

# Keep only the files that are actually needed for setup
!tools/README.md
!tools/setup-instructions.md

# =====================================
# Temporary & Cache Files
# =====================================

# PHP temporary files
*.tmp
*.temp

# Log files
*.log
logs/

# Backup files
*.backup
*.bak
*.old
*.orig

# =====================================
# Assets & Build Files
# =====================================

# Node.js dependencies (if using for asset compilation)
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Build outputs
/build/
/dist/

# Sass cache
.sass-cache/

# =====================================
# Testing & Coverage
# =====================================

# PHPUnit coverage reports
src/tests/coverage/
coverage/
clover.xml

# Testing databases
*.sqlite
*.db

# =====================================
# Documentation & Notes
# =====================================

# Personal notes and todos
TODO.md
NOTES.md
notes/
docs/personal/

# =====================================
# System Files
# =====================================

# macOS
.DS_Store
.AppleDouble
.LSOverride

# Linux
*~
.directory

# =====================================
# Application Specific
# =====================================

# Uploaded Excel files (import system)
src/public/uploads/excel/*
!src/public/uploads/excel/.gitkeep

# Generated reports
src/public/reports/*
!src/public/reports/.gitkeep

# Import task files
src/writable/imports/*
!src/writable/imports/.gitkeep

# =====================================
# Security & Keys
# =====================================

# SSL certificates
*.pem
*.key
*.crt
*.csr

# API keys and secrets
secrets.json
keys/

# =====================================
# Package Manager Files
# =====================================

# Composer vendor directory
vendor/

# PEAR packages
.pearrc

# =====================================
# END OF .gitignore
